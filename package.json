{
  "name": "uts-ihpc",
  "displayName": "UTS-iHPC",
  "description": "",
  "version": "1.0.7",
  "publisher": "JiankeYu",
  "icon": "images/uts.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    ""
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "uts-ihpc",
          "title": "UTS-iHPC",
          "icon": "images/uts.png"
        }
      ]
    },
    "views": {
      "uts-ihpc": [
        {
          "id": "uts-ihpc-list",
          "name": "UTS iHPC LIST"
        }
      ]
    },
    "commands": [
      {
        "command": "uts-ihpc.refresh",
        "title": "Refresh UTS iHPC List",
        "icon": "$(refresh)"
      },
      {
        "command": "uts-ihpc.openSettings",
        "title": "Set UTS iHPC Account",
        "icon": "$(settings-gear)"
      },
      {
        "command": "uts-ihpc.configureSsh",
        "title": "Add Node to SSH Config"
      },
      {
        "command": "uts-ihpc.connectSsh",
        "title": "Connect via SSH"
      }
    ],
    "menus": {
      "view/title": [
        {
          "when": "view == uts-ihpc-list",
          "command": "uts-ihpc.refresh",
          "group": "navigation"
        },
        {
          "command": "uts-ihpc.openSettings",
          "group": "navigation",
          "when": "view == uts-ihpc-list && !isIhpcHost"
        }
      ],
      "view/item/context": [
        {
          "when": "view == uts-ihpc-list && viewItem == ServerNode && !isIhpcHost",
          "command": "uts-ihpc.configureSsh"
        },
        {
          "when": "view == uts-ihpc-list && viewItem == ServerNode",
          "command": "uts-ihpc.connectSsh",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yujianke100/UTS-iHPC-Connection-Wizard.git"
  }
}